@model Produkt

<form method="post" asp-action="Delete">
	<input asp-for="Id" hidden />
	<div class="border p-3 mt-4">
		<div class="row pb-2">
			<h2 class="">Smazat produkt</h2>
			<hr />
		</div>
		@*<div asp-validation-summary="All"></div>*@
		<div class="mb-3">
			<label asp-for="Nazev"></label>
			<input asp-for="Nazev" disabled class="form-control" />
		</div>
		<div class="mb-3">
			<label asp-for="PocetProduktu"></label>
			<input asp-for="PocetProduktu" disabled class="form-control" />
		</div>
		<button type="submit" class="btn btn-danger" style="width:150px">Smazat</button>
		<a asp-controller="Produkt" asp-action="Index" class="btn btn-secondary" style="width:250px">
			Skladové zásoby
		</a>
	</div>
</form>

@section Scripts{
	@{
		<partial name="_ValidationScriptsPartial" />
	}
}