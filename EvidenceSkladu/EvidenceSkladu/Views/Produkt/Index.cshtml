@model IEnumerable<Produkt>
@{
    ViewData["Title"] = "Index";
}
@if(TempData["success"]!=null)
{
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="//cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js"></script>
    <script type="text/javascript">
        toastr.success('@TempData["success"]');
	</script>
}


<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="">Skladové zásoby</h2>
		</div>
        <div class="col-6 text-end">
            <a asp-controller="Produkt" asp-action="Create" class="btn btn-primary">
               <i class="bi bi-plus-circle"></i> &nbsp; Vytvořit nový produkt
			</a>
		</div>
	</div>
    <br /><br />

<table class="table table-bordered table-striped" style="width:100%">
    <thead>
        <tr>
            <th>
                Název produktu
			</th>
            <th>
                Počet kusů na skladě
			</th>
            <th></th>
		</tr>
	</thead>
    <tbody>
        @foreach(var obj in Model)
        {
            <tr>
                <td width="50%">
                    @obj.Nazev
				</td>
                <td width="30%">
                    @obj.PocetProduktu
				</td>
                <td>
                    <div class="w-75 btn-group" role="group">
                        <a asp-controller="Produkt" asp-action="Edit" asp-route-id="@obj.Id"
                        class="btn btn-primary mx-2"> <i class="bi bi-pencil-square"></i> Editovat</a>
                        <a asp-controller="Produkt" asp-action="Delete" asp-route-id="@obj.Id"
                        class="btn btn-danger mx-2"> <i class="bi bi-trash-fill"></i> Smazat</a>
					</div>
				</td>
			</tr>
        }
    </tbody>

</table>
</div>